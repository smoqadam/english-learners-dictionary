{
  "manifest_version": 2,
  "name": "English Learner's Dictionary",
  "author": "Saeed Moghadamzadeh",
  "version": "1.2",
  "description": "English Learner's Dictionary is an open-source browser extension which helps you to lookup the word definitions, synonyms, antonyms, examples, collocations, American and British pronunciation and etc.",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "data/script.js"
      ],
      "css": [
        "style/styles.css",
        "style/themes.css",
        "style/fontello.css"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "*://*.smoqadam.me/",
    "*://*.oxfordlearnersdictionaries.com/*",
    "storage"
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "icons": {
    "16": "icons/dictionary-16.png",
    "32": "icons/dictionary-32.png"
  },
  "web_accessible_resources": [
    "icons/*",
    "style/*",
    "src/setting/*",
    "template.html",
    "settings.html"
  ],
  "options_ui": {
    "page": "settings.html"
  },
  "applications": {
    "gecko": {
      "id": "{eeea59f0-b535-41a3-9c55-68ef5da3a311}"
    }
  }
}

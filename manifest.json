{
  "manifest_version":2,
  "name":"English To English dictionary",
  "author":"Saeed Moghadamzadeh",
  "version":"0.4",
  "description":"Easy to use and powerfull English To English dictionary. Including phonetics, synonyms and example for learning new words deeply.",
  "content_scripts":[
    {
      "matches":["<all_urls>"],
      "js":[
        "data/dictionary.js",
        "data/script.js"
      ],
      "css":[
        "style/styles.css"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "webRequest","webRequestBlocking",
    "*://*.smoqadam.me/","storage"
  ],
  "background":{
    "scripts":[
      "src/background.js"
    ]
  },
  "icons":{
    "16":"icons/dictionary-32.png"
  },
  "web_accessible_resources": [
    "icons/*",
    "style/style.css"
  ],
  "options_ui":{
    "page": "src/setting/settings.html"
  },
  "applications": {
    "gecko": {
      "id": "saeed.moqadam@gmail.com"
    }
  },
  "browser_action":{
    "browser_style": true,
    "default_popup": "data/popup/popup.html",
    "default_icon":{
      "16":"icons/dictionary-16.png",
      "32":"icons/dictionary-32.png"
    }
  }
}
